<div class = "col col-md-3 offset-md-1" id="cart">
  <h3>Your cart:</h3>
  <% if @cart.cart_items.empty? %>
    <p>There are no items in your cart.</p>
  <% end %>
  <% unless @cart.cart_items.empty? %>
    <div class="table-responsive">
      <table class="table table-striped" id="cart_items_table">
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Cost</th>
          <th></th>
        </tr>
        <% @cart.cart_items.each do |item| %>
          <%= render 'carts/cart_item', item: item%>
        <% end %>
        <tr class="table-active">
          <th></th>
          <th>Total:</th>
          <th colspan="2"><%= " #{sprintf('%.2f', @cart.total)} PLN" %></th>
        </tr>
      </table>
    </div>
    <%= link_to "Checkout", new_order_path, 
      class: "btn btn-success fa fa-shopping-cart"%>
  <% end %>
</div>